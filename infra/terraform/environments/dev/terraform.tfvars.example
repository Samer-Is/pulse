# Example Terraform Variables for Dev Environment
# Copy this file to terraform.tfvars and customize

project_name = "pulse"
environment  = "dev"
aws_region   = "eu-central-1"

# VPC Configuration
vpc_cidr           = "10.0.0.0/16"
availability_zones = ["eu-central-1a", "eu-central-1b"]
ssh_allowed_ips    = ["0.0.0.0/0"]  # CHANGE THIS TO YOUR IP!

# EC2 Configuration
ec2_instance_type = "t3.micro"

# RDS Configuration
rds_instance_class    = "db.t4g.micro"
postgres_version      = "16.1"
rds_allocated_storage = 20
database_name         = "pulse"
database_username     = "pulse_admin"

# Dev-only settings (change for production)
skip_final_snapshot  = true
deletion_protection  = false

# S3 Configuration
cors_allowed_origins = ["*"]  # Restrict in production

