# AWS Configuration
aws_account_id = "000000000000"
aws_region     = "eu-central-1"
project_name   = "ai-studio"
environment    = "prod"

# Domain (optional)
# domain_name    = "pulse.ai"
# hosted_zone_id = "Z1234567890ABC"

# Network
vpc_cidr           = "10.0.0.0/16"
availability_zones = ["eu-central-1a", "eu-central-1b", "eu-central-1c"]

# Database
db_name         = "pulse_ai"
db_min_capacity = 0.5
db_max_capacity = 4

# ECS Task Sizes
ecs_frontend_cpu    = 512
ecs_frontend_memory = 1024
ecs_backend_cpu     = 1024
ecs_backend_memory  = 2048
ecs_gateway_cpu     = 1024
ecs_gateway_memory  = 2048
ecs_worker_cpu      = 512
ecs_worker_memory   = 1024

# GitHub OIDC
github_org  = "your-github-org"
github_repo = "ai-studio"
