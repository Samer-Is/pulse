# Node Environment
NODE_ENV=development

# Frontend
NEXT_PUBLIC_API_BASE=http://localhost:8000

# Backend API
JWT_SECRET=replace_me_local_only_change_in_production
API_HOST=0.0.0.0
API_PORT=8000

# Database
POSTGRES_URL=postgresql://pulse:pulse@localhost:5432/pulse

# AWS (local/dev - use Secrets Manager in prod)
AWS_REGION=eu-central-1
S3_BUCKET_NAME=pulse-dev-exports
SQS_QUEUE_URL=http://localstack:4566/000000000000/pulse-jobs

# Google OAuth
GOOGLE_OAUTH_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_OAUTH_CLIENT_SECRET=your-client-secret
GOOGLE_OAUTH_REDIRECT_URI=http://localhost:3000/api/auth/callback/google

# OpenAI
OPENAI_API_KEY=sk-your-openai-key

# Anthropic
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key

# Google Vertex AI (for Gemini chat + Imagen)
GCP_VERTEX_PROJECT_ID=your-gcp-project-id
GCP_VERTEX_LOCATION=us-central1
GCP_VERTEX_SA_JSON=base64-encoded-service-account-json

# Video Generation
RUNWAY_API_KEY=your-runway-key
PIKA_API_KEY=your-pika-key

# Rate Limiting
RATE_LIMIT_PER_IP=120
RATE_LIMIT_PER_USER=60

